@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center py-5">
    <h1 class="display-1 text-muted">Oops!</h1>
    <h2 class="mb-4">Something went wrong</h2>
    <p class="text-muted mb-4">An unexpected error occurred. Please try again later.</p>
    
    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <small>Reference ID: @Model.RequestId</small>
        </p>
    }
    
    <div class="d-flex justify-content-center gap-2">
        <a asp-page="/Index" class="btn btn-primary">Go to Home</a>
        <a href="javascript:history.back()" class="btn btn-outline-secondary">Go Back</a>
    </div>
</div>
